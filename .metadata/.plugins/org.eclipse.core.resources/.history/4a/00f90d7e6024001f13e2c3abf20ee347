package com.grupo7.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.grupo7.model.Medico;
import com.grupo7.model.Prescricao;
import com.grupo7.repository.MedicoRepository;
import com.grupo7.repository.PrescricaoRepository;

@Service
public class MedicoService {
    @Autowired
    private MedicoRepository medicoRepository;
    @Autowired
    private ConsultaRepository consultaRepository;
    @Autowired
    private PacienteRepository pacienteRepository;

    public List<Medico> findAll() {
        return medicoRepository.findAll();
    }

    public Medico save(Medico medico) {
        return medicoRepository.save(medico);
    }

    public List<Consulta> findAllConsultas() {
        return consultaRepository.findAll();
    }

    public List<Paciente> findAllPacientes() {
        return pacienteRepository.findAll();
    }
}