package com.grupo7.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.grupo7.model.Remedio;
import com.grupo7.repository.ControladorEstoqueRepository;
import com.grupo7.repository.RemedioRepository;

import java.util.List;

@Service
public class ControladorEstoqueService {

    @Autowired
    private ControladorEstoqueRepository controladorEstoqueRepository;

    @Autowired
    private RemedioRepository remedioRepository;

    public Remedio createRemedio(Remedio remedio) {
        return remedioRepository.save(remedio);
    }

    public void deleteRemedio(Long id) {
        remedioRepository.deleteById(id);
    }
}
