    width: 100%;
    border-collapse: collapse;
    margin: 20px 0;
    font-size: 1em;
    text-align: left;
}

table thead tr {
    background-color: #f2f2f2; /* Cor de fundo do cabeçalho da tabela */
}

table th, table td {
    padding: 12px 15px;
    border: 1px solid #ddd; /* Cor da borda */
}

table tbody tr:nth-of-type(even) {
    background-color: #f9f9f9; /* Cor de fundo das linhas pares */
}

table tbody tr:hover {
    background-color: #f1f1f1; /* Cor de fundo ao passar o mouse */
}

table th {
    background-color: #e0e0e0; /* Cor de fundo dos cabeçalhos */
    color: #333; /* Cor do texto dos cabeçalhos */
}
