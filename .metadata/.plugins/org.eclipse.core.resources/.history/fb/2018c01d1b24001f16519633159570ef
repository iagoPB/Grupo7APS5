package com.grupo7.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.grupo7.model.Consulta;
import com.grupo7.repository.ConsultaRepository;

import java.util.List;
import java.util.Optional;

@Service
public class ConsultaService {

    @Autowired
    private ConsultaRepository consultaRepository;

    public List<Consulta> getAllConsultas() {
        return consultaRepository.findAll();
    }

    public Optional<Consulta> getConsultaById(Long id) {
        return consultaRepository.findById(id);
    }

    public Consulta createConsulta(Consulta consulta) {
        return consultaRepository.save(consulta);
    }

    public Consulta updateConsulta(Long id, Consulta consultaDetails) {
        Optional<Consulta> consulta = consultaRepository.findById(id);
        if (consulta.isPresent()) {
            Consulta existingConsulta = consulta.get();
            existingConsulta.setData(consultaDetails.getData());
            existingConsulta.setPaciente(consultaDetails.getPaciente());
            existingConsulta.setMedico(consultaDetails.getMedico());
            return consultaRepository.save(existingConsulta);
        } else {
            throw new RuntimeException("Consulta not found with id " + id);
        }
    }

    public void deleteConsulta(Long id) {
        consultaRepository.deleteById(id);
    }
}
