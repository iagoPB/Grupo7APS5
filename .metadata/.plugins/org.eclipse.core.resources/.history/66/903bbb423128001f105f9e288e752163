package com.grupo7.hospital.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.ui.Model;
import com.grupo7.hospital.model.User;
import com.grupo7.hospital.service.UserService;



@Controller
public class UserController {

    @Autowired
    private UserService userService;

    @GetMapping("/users/new")
    public String newUser(Model model) {
        model.addAttribute("user", new User());
        return "user/form"; // Nome do template "form.html" em "src/main/resources/templates/user/"
    }

    @PostMapping("/users")
    public String saveUser(User user) {
        userService.save(user);
        if (user.getEmail().endsWith("@medico.com")) {
            return "redirect:/medicos/new";
        } else if (user.getEmail().endsWith("@paciente.com")) {
            return "redirect:/pacientes/new";
        } else {
            return "redirect:/"; // Redireciona para a página inicial se o e-mail não terminar com "@medico.com" ou "@paciente.com"
        }
    }
}